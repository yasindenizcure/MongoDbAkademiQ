@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1> Kategori Güncelle</h1>
<br />
<br />
<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Hakkımızda Başlığı</label>
        <input type="text" asp-for="CategoryName" class="form-control" />
        <span class="text-danger" asp-validation-for="CategoryName"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-outline-dark">Güncelle</button>
</form>