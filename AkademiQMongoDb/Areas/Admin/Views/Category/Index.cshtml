@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Kategori Sayfası</h1>
    <a href="/Admin/Category/CreateCategory/" class="btn btn-primary"><i class="fas fa-plus"></i> Yeni Kategori Ekle</a>
</div>

<div class="table-responsive">
    <table class="table table-hover table-bordered align-middle">
        <thead class="table-light">
            <tr>
                <th>Kategori Adı</th>
                <th class="text-center">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">@item.CategoryName</td>
                    <td class="text-center">
                        <a href="/Admin/Category/UpdateCategory/@item.Id" class="btn btn-sm btn-outline-info me-2">
                            <i class="fas fa-edit"></i> Güncelle
                        </a>
                        <a href="/Admin/Category/DeleteCategory/@item.Id" onclick="return confirm('Bu ögeyi silmek istediğinize emin misiniz?')" class="btn btn-sm btn-outline-danger">
                            <i class="fas fa-trash"></i> Sil
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
