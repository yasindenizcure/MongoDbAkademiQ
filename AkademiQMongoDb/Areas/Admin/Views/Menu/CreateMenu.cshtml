@model CreateMenuDto
@{
    ViewData["Title"] = "CreateMenu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Menü Ekle</h1>
<br />
<br />
<form method="post">
    <div class="form-group">
        <label>Menü Başlığı</label>
        <input type="text" asp-for="Title" class="form-control" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <br />

    <div class="form-group">
        <label>Menü Açıklaması</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <br />
    <div class="form-group">
        <label>Menü Fiyatı</label>
        <textarea asp-for="Price" class="form-control"></textarea>
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>
    <div class="form-group">
        <label>İçindekiler</label>
        <textarea asp-for="Ingredients" class="form-control"></textarea>
        <span class="text-danger" asp-validation-for="Ingredients"></span>
    </div>
    <br />
    <div class="form-group">
        <label>Görsel</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <span class="text-danger" asp-validation-for="ImageUrl"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-outline-dark">Kaydet</button>
</form>