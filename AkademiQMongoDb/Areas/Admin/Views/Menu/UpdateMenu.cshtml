@model UpdateMenuDto
@{
    ViewData["Title"] = "UpdateMenu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1> Menü Güncelle</h1>
<br />
<br />
<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Menü Adı</label>
        <input type="text" asp-for="Title" class="form-control" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <br />

    <div class="form-group">
        <label>Menü Açıklaması</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <br />

    <div class="form-group">
        <label>Menü Görseli</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <span class="text-danger" asp-validation-for="ImageUrl"></span>
    </div>
    <br />

    <div class="form-group">
        <label>Fiyat</label>
        <input type="text" asp-for="Price" class="form-control" />
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>
    <br />
    <div class="form-group">
        <label>İçindekiler</label>
        <input type="text" asp-for="Ingredients" class="form-control" />
        <span class="text-danger" asp-validation-for="Ingredients"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-outline-dark">Güncelle</button>
</form>