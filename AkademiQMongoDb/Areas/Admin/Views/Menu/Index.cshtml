@model List<ResultMenuDto>
@{
    ViewData["Title"] = "Menü Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Menü Sayfası</h1>
    <a href="/Admin/Menu/CreateMenu/" class="btn btn-primary"><i class="fas fa-plus"></i> Yeni Menü Ekle</a>
</div>

<div class="table-responsive">
    <table class="table table-hover table-bordered align-middle">
        <thead class="table-light">
            <tr>
                <th>Resim</th>
                <th>Başlık</th>
                <th>Açıklama</th>
                <th>Fiyat</th>
                <th>İçindekiler</th>
                <th class="text-center">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.ImageUrl" class="rounded" style="width:60px; height:60px; object-fit:cover;" alt="Görsel bulunamadı" />
                    </td>
                    <td class="fw-bold">@item.Title</td>

                    <td style="max-width: 300px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                        @item.Description
                    </td>
                    <td style="max-width: 300px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                        @item.Price
                    </td>
                    <td class="fw-bold">@item.Ingredients</td>
                    <td class="text-center">
                        <a href="/Admin/Menu/UpdateMenu/@item.Id" class="btn btn-sm btn-outline-info me-2">
                            <i class="fas fa-edit"></i> Güncelle
                        </a>
                        <a href="/Admin/Menu/DeleteMenu/@item.Id" onclick="return confirm('Bu ögeyi silmek istediğinize emin misiniz?')" class="btn btn-sm btn-outline-danger">
                            <i class="fas fa-trash"></i> Sil
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>