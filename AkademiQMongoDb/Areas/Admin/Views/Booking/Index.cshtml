@model List<ResultBookingDto>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="m-0">Masa Rezervasyonları</h3>
</div>

<table class="table table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Rezervasyon Adı</th>
            <th>Telefon Numarası</th>
            <th>Kişi Sayısı</th>
            <th>Tarih</th>
            <th>Rezervasyon Durumu</th>
            <th class="text-end">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><strong>@item.Name</strong></td>
                <td><strong>@item.Phone</strong></td>
                <td><span class="badge bg-info text-dark">@item.PersonCount Kişi</span></td>
                <td>@item.Date.ToShortDateString()</td>
                <td>
                    @if (item.IsApproved)
                    {
                        <span class="badge bg-success">Onaylandı</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">Onay Bekliyor</span>
                    }
                </td>
                <td>
                    @if (!item.IsApproved)
                    {
                        <a href="/Admin/Booking/Approve/@item.Id" class="btn btn-sm btn-success">Onayla</a>
                    }
                    <a href="/Admin/Booking/DeleteBooking/@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>