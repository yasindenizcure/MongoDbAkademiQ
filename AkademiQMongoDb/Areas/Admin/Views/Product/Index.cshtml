@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Ürünler</h1>

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Ürün Adı</th>
        <th>Açıklama</th>
        <th>Fiyat</th>
        <th>Kategori</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" style="width:50px; height:50px" /></td>
            <td>@item.ProductName</td>
            <td>@item.Description</td>
            <td>@item.Price ₺</td>
            <td>@item.CategoryName</td>
            <td>
                <a href="/Admin/Product/DeleteProduct/@item.Id" onclick="return confirm('Bu ögeyi silmek istediğinize emin misiniz?')" class="btn btn-outline-danger">Sil</a>
                <a href="/Admin/Product/UpdateProduct/@item.Id" class="btn btn-outline-info">Güncelle</a>
        </tr>
    }
</table>
<a href="/Admin/Product/CreateProduct/" class="btn btn-outline-success">Yeni Ürün Ekle</a>