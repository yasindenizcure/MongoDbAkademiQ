@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1> Ürün Güncelle</h1>
<br />
<br />
<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Ürün Adı</label>
        <input type="text" asp-for="ProductName" class="form-control" />
        <span class="text-danger" asp-validation-for="ProductName"></span>
    </div>
    <br />

    <div class="form-group">
        <label>Ürün Açıklaması</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <br />

    <div class="form-group">
        <label>Görsel</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <span class="text-danger" asp-validation-for="ImageUrl"></span>
    </div>
    <br />

    <div class="form-group">
        <label>Fiyat</label>
        <input type="text" asp-for="Price" class="form-control" />
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>
    <br />

    <div class="form-group">
        <label>Kategori</label>
        <select asp-for="CategoryName" class="form-control" asp-items="@ViewBag.categories">
            <option disabled selected>Kategori Seçiniz...</option>
        </select>
        <span class="text-danger" asp-validation-for="CategoryName"></span>
    </div>
    <br />

    <button type="submit" class="btn btn-outline-dark">Güncelle</button>
</form>