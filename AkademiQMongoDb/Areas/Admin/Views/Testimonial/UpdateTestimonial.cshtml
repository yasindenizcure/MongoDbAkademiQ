@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1> Müşteri Güncelle</h1>
<br />
<br />
<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Müşteri Yorum Başlığı</label>
        <input type="text" asp-for="Title" class="form-control" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <br />
    <div class="form-group">
        <label>Müşteri Adı Soyadı</label>
        <textarea asp-for="Fullname" class="form-control"></textarea>
        <span class="text-danger" asp-validation-for="Fullname"></span>
    </div>
    <br />
    <div class="form-group">
        <label>Müşteri Yorumu</label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span class="text-danger" asp-validation-for="Comment"></span>
    </div>
    <br />
    <div class="form-group">
        <label>Müşteri Görseli</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <span class="text-danger" asp-validation-for="ImageUrl"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-outline-dark">Güncelle</button>
</form>