@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Müşteri Yorumları</h1>
    <a href="/Admin/Testimonial/CreateTestimonial/" class="btn btn-primary"><i class="fas fa-plus"></i> Yeni Ekle</a>
</div>

<div class="table-responsive">
    <table class="table table-hover table-bordered align-middle">
        <thead class="table-light">
            <tr>
                <th>Resim</th>
                <th>Ad Soyad</th>
                <th>Başlık</th>
                <th>Yorum</th>
                <th class="text-center">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.ImageUrl" class="rounded" style="width:60px; height:60px; object-fit:cover;" alt="Görsel bulunamadı" />
                    </td>
                    <td class="fw-bold">@item.Fullname</td>
                    <td class="fw-bold">@item.Title</td>

                    <td style="max-width: 300px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                        @item.Comment
                    </td>

                    <td class="text-center">
                        <a href="/Admin/Testimonial/UpdateTestimonial/@item.Id" class="btn btn-sm btn-outline-info me-2">
                            <i class="fas fa-edit"></i> Güncelle
                        </a>
                        <a href="/Admin/Testimonial/DeleteTestimonial/@item.Id" onclick="return confirm('Bu ögeyi silmek istediğinize emin misiniz?')" class="btn btn-sm btn-outline-danger">
                            <i class="fas fa-trash"></i> Sil
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>