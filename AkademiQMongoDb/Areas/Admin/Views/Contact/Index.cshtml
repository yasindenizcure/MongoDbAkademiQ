@model List<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="m-0">İletişim Sayfası</h3>
</div>

<table class="table table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Adı Soyadı</th>
            <th>Telefon Numarası</th>
            <th>E-Posta Adresi</th>
            <th>Mesajı</th>
            <th class="text-end">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><strong>@item.Fullname</strong></td>
                <td>@item.PhoneNumber</td>
                <td>@item.Email</td>
                <td style="max-width: 200px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                    @item.Message
                </td>
                <td class="text-end">
                    <button type="button" class="btn btn-sm btn-info view-detail"
                            data-name="@item.Fullname"
                            data-content="@item.Message"
                            data-title="Mesaj Detayı">
                        <i class="fas fa-eye"></i> Detay
                    </button>
                    <a href="/Admin/Contact/DeleteContact/@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="modal fade" id="detailModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h5 class="modal-title" id="modalHeaderTitle">Detay</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h6 id="modalSenderName" class="text-primary mb-3"></h6>
                <div id="modalBodyContent" style="white-space: pre-wrap; line-height: 1.6;"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const detailButtons = document.querySelectorAll('.view-detail');
        const myModal = new bootstrap.Modal(document.getElementById('detailModal'));

        detailButtons.forEach(btn => {
            btn.addEventListener('click', function() {
                const name = this.getAttribute('data-name');
                const content = this.getAttribute('data-content');
                const title = this.getAttribute('data-title');

                document.getElementById('modalHeaderTitle').innerText = title;
                document.getElementById('modalSenderName').innerText = "Gönderen: " + name;
                document.getElementById('modalBodyContent').innerText = content;

                myModal.show();
            });
        });
    });
</script>