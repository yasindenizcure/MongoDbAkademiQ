@model List<ResultProductDto>

@{
    ViewData["Title"] = "Menü";
    Layout = "~/Views/UILayout/Layout.cshtml";
}

<div class="breadcrumb-area bg-cover text-center text-light" style="background-image: url('/Foodu v1.7/source/assets/img/shape/11.jpg');">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <h1>Yemek Menüsü</h1>
                <ul class="breadcrumb">
                    <li><a href="/Default/Index"><i class="fas fa-home"></i> Ana Sayfa</a></li>
                    <li>Menü</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="food-menu-area inc-isotop bg-gray default-padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12 food-menu-content text-center">

                <div class="mix-item-menu">
                    <button class="active" data-filter="*">Tümü</button>
                    @foreach (var cat in Model.Select(x => x.CategoryName).Distinct())
                    {
                        <button data-filter=".@cat.ToLower().Replace(" ", "")">@cat</button>
                    }
                </div>

                <div class="masonary">
                    <div id="portfolio-grid" class="food-menu-lists colums-3">

                        @foreach (var item in Model)
                        {
                            var filterClass = item.CategoryName?.ToLower().Replace(" ", "") ?? "genel";

                            <div class="food-menu-style-one pf-item @filterClass">
                                <div class="item wow fadeInUp">
                                    <div class="thumb">
                                        <img src="@item.ImageUrl" alt="@item.ProductName">
                                    </div>
                                    <div class="info">
                                        <h4><a href="#">@item.ProductName</a></h4>
                                        <p>@item.Description</p>
                                        <div class="food-cats">@item.CategoryName</div>
                                        <div class="item-price">
                                            <div class="left">
                                                <h5>₺@item.Price.ToString("N2")</h5>
                                            </div>
                                        </div>
                                        <div class="button">
                                            <a href="/Basket/AddBasket/@item.Id">Sipariş Ver</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>