@model List<AkademiQMongoDb.DTOs.ChefDtos.ResultChefDto>

<div class="chef-style-one-area default-padding bottom-less">
    <div class="container">
        <div class="row g-4">

            @foreach (var item in Model)
            {
                <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6">

                    <div class="chef-style-one-item wow fadeInUp h-100">

                        <div class="thumb">
                            <div style="
                                    width:100%;
                                    height:350px;
                                    background-image:url('@item.ImageUrl');
                                    background-size:cover;
                                    background-position:center top;
                                    border-radius:8px;">
                            </div>

                            <ul class="chef-one-social">
                                @if (!string.IsNullOrEmpty(item.SocialMedia1))
                                {
                                    <li class="facebook">
                                        <a href="@item.SocialMedia1">
                                            <i class="fab fa-facebook-f"></i>
                                        </a>
                                    </li>
                                }
                                @if (!string.IsNullOrEmpty(item.SocialMedia2))
                                {
                                    <li class="twitter">
                                        <a href="@item.SocialMedia2">
                                            <i class="fab fa-twitter"></i>
                                        </a>
                                    </li>
                                }
                                @if (!string.IsNullOrEmpty(item.SocialMedia3))
                                {
                                    <li class="linkedin">
                                        <a href="@item.SocialMedia3">
                                            <i class="fab fa-linkedin-in"></i>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>

                        <div class="info text-center mt-3">
                            <h4>@item.Fullname</h4>
                            <span>@item.Title</span>
                        </div>

                    </div>

                </div>
            }

        </div>
    </div>
</div>