@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Foodu - Dinamik Restoran Uygulaması">

    <title>Foodu - Restoran</title>

    <link rel="shortcut icon" href="/Foodu v1.7/source/assets/img/favicon.png" type="image/x-icon">

    <link href="/Foodu v1.7/source/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Foodu v1.7/source/assets/css/font-awesome.min.css" rel="stylesheet">
    <link href="/Foodu v1.7/source/assets/css/flaticon-set.css" rel="stylesheet">
    <link href="/Foodu v1.7/source/assets/css/magnific-popup.css" rel="stylesheet">
    <link href="/Foodu v1.7/source/assets/css/swiper-bundle.min.css" rel="stylesheet">
    <link href="/Foodu v1.7/source/assets/css/animate.min.css" rel="stylesheet">
    <link href="/Foodu v1.7/source/assets/css/bootstrap-datepicker3.css" rel="stylesheet">
    <link href="/Foodu v1.7/source/assets/css/validnavs.css" rel="stylesheet">
    <link href="/Foodu v1.7/source/assets/css/helper.css" rel="stylesheet">
    <link href="/Foodu v1.7/source/assets/css/unit-test.css" rel="stylesheet">
    <link href="/Foodu v1.7/source/assets/css/shop.css" rel="stylesheet">
    <link href="/Foodu v1.7/source/assets/css/style.css" rel="stylesheet">
</head>

<body>

    <div class="radio-btn-light">
        <div class="radio-inner-light"></div>
    </div>
    <div id="preloader">
        <div id="restan-preloader" class="restan-preloader">
            <div class="animation-preloader">
                <div class="spinner"></div>
            </div>
            <div class="loader">
                <div class="row">
                    <div class="col-3 loader-section section-left"><div class="bg"></div></div>
                    <div class="col-3 loader-section section-left"><div class="bg"></div></div>
                    <div class="col-3 loader-section section-right"><div class="bg"></div></div>
                    <div class="col-3 loader-section section-right"><div class="bg"></div></div>
                </div>
            </div>
        </div>
    </div>
    <div class="top-bar-area top-bar-style-one bg-theme text-light">
        <div class="container">
            <div class="row align-center">
                <div class="col-lg-7">
                    <ul class="item-flex">
                        <li>
                            <a href="tel:+905551234567">
                                <img src="/Foodu v1.7/source/assets/img/icon/10.png" alt="Icon"> Telefon: +90 555 123 45 67
                            </a>
                        </li>
                        <li>
                            <a href="mailto:info@foodu.com">
                                <img src="/Foodu v1.7/source/assets/img/icon/11.png" alt="Icon"> E-posta: info@foodu.com
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-5 text-end">
                    <div class="item-flex">
                        <div class="social">
                            <ul>
                                <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                                <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fab fa-youtube"></i></a></li>
                                <li><a href="#"><i class="fab fa-linkedin-in"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <header>
        @{
            string navClass = ViewData["NavClass"] as string ?? "dark";
        }
        <nav class="navbar mobile-sidenav navbar-sticky navbar-default validnavs @navClass">

            <div class="top-search">
                <div class="container-xl">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                        <input type="text" class="form-control" placeholder="Arama yapın...">
                        <span class="input-group-addon close-search"><i class="fa fa-times"></i></span>
                    </div>
                </div>
            </div>
            <div class="container-full d-flex justify-content-between align-items-center">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-menu">
                        <i class="fa fa-bars"></i>
                    </button>
                    <a class="navbar-brand" href="/Default/Index">
                        <img src="/Foodu v1.7/source/assets/img/logo.png" class="logo" alt="Logo">
                    </a>
                </div>

                <div class="collapse navbar-collapse" id="navbar-menu">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-menu">
                        <i class="fa fa-times"></i>
                    </button>

                    <ul class="nav navbar-nav navbar-right" data-in="fadeInDown" data-out="fadeOutUp">
                        <li><a href="/Default/Index">Ana Sayfa</a></li>
                        <li><a href="/About/Index">Hakkımızda</a></li>
                        <li><a href="/Menu/Index">Menü</a></li>
                        <li><a href="/Contact/Index">İletişim</a></li>
                    </ul>
                </div>

                <div class="attr-right">
                    <div class="attr-nav attr-box">
                        <ul>
                            <li class="search"><a href="#"><i class="fas fa-search"></i></a></li>
                            <li class="dropdown">
                                <a href="/Admin/Product/Index/" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="far fa-shopping-cart"></i>
                                    <span class="badge">0</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main style="padding-top: 0; margin-top: 0;">
        @RenderBody()
    </main>

    <footer class="bg-dark footer-style-one text-light">
        <div class="container">
            <div class="row">

                <div class="col-lg-3 col-md-6 footer-item mt-50">
                    <div class="f-item about">
                        <img src="/Foodu v1.7/source/assets/img/logo-3.png" alt="Logo">
                        <p>Lezzetli tarifleri ve ilhamı restoranımızda keşfedin.</p>
                        <ul class="opening-list">
                            <li>Pazartesi - Cuma <span class="text-end">11:00 - 23:00</span></li>
                            <li>Cumartesi - Pazar <span class="text-end">12:00 - 00:00</span></li>
                        </ul>
                    </div>
                </div>

                <div class="col-lg-2 col-md-6 mt-50 footer-item pl-50 pl-md-15 pl-xs-15">
                    <div class="f-item link">
                        <h4 class="widget-title">Hızlı Linkler</h4>
                        <ul>
                            <li><a href="/Default/Index">Ana Sayfa</a></li>
                            <li><a href="/About/Index">Hakkımızda</a></li>
                            <li><a href="/Menu/Index">Menü</a></li>
                            <li><a href="/Contact/Index">İletişim</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 footer-item mt-50">
                    <div class="f-item contact">
                        <h4 class="widget-title">İletişim</h4>
                        <ul class="contact-widget">
                            <li>
                                <div class="icon"><i class="fas fa-map-marker-alt"></i></div>
                                <div class="content">İstanbul / Pendik</div>
                            </li>
                            <li>
                                <div class="icon"><i class="fas fa-phone"></i></div>
                                <div class="content"><a href="tel:2151234567">+90 555 123 45 67</a></div>
                            </li>
                            <li>
                                <div class="icon"><i class="fas fa-envelope"></i></div>
                                <div class="content"><a href="mailto:info@foodu.com">info@foodu.com</a></div>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6 footer-item mt-50">
                    <div class="f-item newsletter">
                        <h4 class="widget-title">Bültenimize Abone Olun</h4>
                        <p>En yeni lezzetlerden ve özel indirim fırsatlarından ilk sizin haberiniz olsun.</p>
                        <form action="/Subscriber/CreateSubscriber" method="post">
                            <input type="email" placeholder="E-posta Adresiniz" class="form-control" name="Email" required>
                            <button type="submit"> Abone Ol <i class="fas fa-long-arrow-right"></i></button>
                        </form>

                        <div class="footer-socila-items mt-30">
                            <h4>Bizi Takip Edin: </h4>
                            <ul class="footer-social">
                                <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                                <li><a href="instagram.com/yasincure_"><i class="fab fa-instagram"></i></a></li>
                                <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                            </ul>
                        </div>

                    </div>
                </div>

            </div>
        </div> <div class="footer-bottom">
            <div class="row align-center">
                <div class="col-lg-6 text-center text-lg-start">
                    <p>© Copyright 2026 Foodu. Tüm hakları saklıdır.</p>
                </div>
            </div>
        </div>
    </footer>

    <a href="#" class="btn btn-lg btn-primary btn-lg-square rounded-circle back-to-top" style="position:fixed; bottom:30px; right:30px; display:none; z-index:999;"><i class="fa fa-arrow-up"></i></a>

    <script src="/Foodu v1.7/source/assets/js/jquery-3.6.0.min.js"></script>
    <script src="/Foodu v1.7/source/assets/js/bootstrap.bundle.min.js"></script>
    <script src="/Foodu v1.7/source/assets/js/jquery.appear.js"></script>
    <script src="/Foodu v1.7/source/assets/js/swiper-bundle.min.js"></script>
    <script src="/Foodu v1.7/source/assets/js/progress-bar.min.js"></script>
    <script src="/Foodu v1.7/source/assets/js/wow.min.js"></script>
    <script src="/Foodu v1.7/source/assets/js/isotope.pkgd.min.js"></script>
    <script src="/Foodu v1.7/source/assets/js/imagesloaded.pkgd.min.js"></script>
    <script src="/Foodu v1.7/source/assets/js/magnific-popup.min.js"></script>
    <script src="/Foodu v1.7/source/assets/js/count-to.js"></script>
    <script src="/Foodu v1.7/source/assets/js/jquery.nice-select.min.js"></script>
    <script src="/Foodu v1.7/source/assets/js/YTPlayer.min.js"></script>
    <script src="/Foodu v1.7/source/assets/js/loopcounter.js"></script>
    <script src="/Foodu v1.7/source/assets/js/validnavs.js"></script>
    <script src="/Foodu v1.7/source/assets/js/bootstrap-datepicker.js"></script>
    <script src="/Foodu v1.7/source/assets/js/gsap.js"></script>
    <script src="/Foodu v1.7/source/assets/js/ScrollTrigger.min.js"></script>
    <script src="/Foodu v1.7/source/assets/js/SplitText.min.js"></script>
    <script src="/Foodu v1.7/source/assets/js/main.js"></script>

    <script>
        $(window).scroll(function () {
            if ($(this).scrollTop() > 300) {
                $('.back-to-top').fadeIn('slow');
            } else {
                $('.back-to-top').fadeOut('slow');
            }
        });
        $('.back-to-top').click(function () {
            $('html, body').animate({scrollTop: 0}, 1500, 'easeInOutExpo');
            return false;
        });
    </script>
</body>
</html>