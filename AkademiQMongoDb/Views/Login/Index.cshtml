@model LoginAdminDto
@{
    Layout = null;
}


<!DOCTYPE html>

<html class="light" lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title> Milky | Admin Giriş Sayfası</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&amp;family=Noto+Sans:wght@400;500&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght@300,FILL@0..1&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#0d8282",
                        "background-light": "#f9fafa",
                        "background-dark": "#1c1e22",
                    },
                    fontFamily: {
                        "display": ["Space Grotesk", "sans-serif"],
                        "sans": ["Noto Sans", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.5rem",
                        "lg": "1rem",
                        "xl": "1.5rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    <style>
        .glass-effect {
            background: rgba(255, 255, 255, 0.45);
            backdrop-filter: blur(16px);
            -webkit-backdrop-filter: blur(16px);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .dark .glass-effect {
            background: rgba(28, 30, 34, 0.65);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .bg-mesh {
            background-color: #f9fafa;
            background-image: radial-gradient(at 0% 0%, hsla(180, 82%, 28%, 0.15) 0px, transparent 50%), radial-gradient(at 100% 0%, hsla(180, 82%, 28%, 0.1) 0px, transparent 50%), radial-gradient(at 100% 100%, hsla(180, 82%, 28%, 0.05) 0px, transparent 50%), radial-gradient(at 0% 100%, hsla(180, 82%, 28%, 0.1) 0px, transparent 50%);
        }

        .dark .bg-mesh {
            background-color: #111315;
            background-image: radial-gradient(at 0% 0%, hsla(180, 82%, 28%, 0.2) 0px, transparent 50%), radial-gradient(at 100% 100%, hsla(180, 82%, 28%, 0.1) 0px, transparent 50%);
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark font-display antialiased transition-colors duration-300">
    <div class="relative min-h-screen flex flex-col bg-mesh overflow-hidden">
        <!-- Top Navigation -->
        <header class="w-full flex items-center justify-between px-6 md:px-20 py-6 z-10">
            <div class="flex items-center gap-3 text-primary">
                <div class="size-8">
                    <svg fill="none" viewbox="0 0 48 48" xmlns="http://www.w3.org/2000/svg">
                        <path clip-rule="evenodd" d="M24 0.757355L47.2426 24L24 47.2426L0.757355 24L24 0.757355ZM21 35.7574V12.2426L9.24264 24L21 35.7574Z" fill="currentColor" fill-rule="evenodd"></path>
                    </svg>
                </div>
                <h2 class="text-[#0e1b1b] dark:text-white text-xl font-bold tracking-tight">Milky</h2>
            </div>
            <div class="flex items-center gap-6">
                <a class="hidden md:block text-[#0e1b1b] dark:text-white/80 text-sm font-medium hover:text-primary transition-colors" href="#">About</a>
                <button class="flex min-w-[100px] cursor-pointer items-center justify-center rounded-xl h-11 px-5 bg-primary text-white text-sm font-bold tracking-wide shadow-lg shadow-primary/20 hover:brightness-110 transition-all">
                    Log in
                </button>
            </div>
        </header>
        <!-- Main Content -->
        <main class="flex-1 flex items-center justify-center p-6 z-10">
            <div class="glass-effect w-full max-w-[520px] rounded-[2rem] p-8 md:p-12 shadow-2xl">
                <!-- Headline Section -->
                <div class="text-center mb-10">
                    <h1 class="text-[#0e1b1b] dark:text-white text-3xl md:text-4xl font-bold leading-tight tracking-tight mb-3">Admin Giriş Sayfası</h1>
                    <p class="text-[#4d9999] dark:text-gray-400 text-base font-normal">Milky Admin Giriş Sayfası.</p>
                </div>
                <!-- Registration Form -->
                <form method="post" class="space-y-6">
                    <!-- Names Row -->
                    <div class="flex flex-col md:flex-row gap-4">
                    </div>
                    <!-- Username -->
                    <div class="flex flex-col gap-2">
                        <label class="text-[#0e1b1b] dark:text-white/90 text-sm font-semibold px-1">Kullanıcı Adı</label>
                        <input asp-for="Username" class="w-full rounded-xl text-[#0e1b1b] dark:text-white border border-primary/20 bg-white/50 dark:bg-black/20 focus:ring-2 focus:ring-primary/40 focus:border-primary h-14 px-4 transition-all outline-none placeholder:text-[#4d9999]/60" placeholder="janedoe_craft" type="text" required />
                    </div>
                    <!-- Password Section -->
                    <div class="flex flex-col gap-2 relative">


                        <label class="text-[#0e1b1b] dark:text-white/90 text-sm font-semibold px-1">Şifre</label>
                        <div class="relative group">
                            <input asp-for="Password" class="w-full rounded-xl text-[#0e1b1b] dark:text-white border border-primary/20 bg-white/50 dark:bg-black/20 focus:ring-2 focus:ring-primary/40 focus:border-primary h-14 pl-4 pr-12 transition-all outline-none placeholder:text-[#4d9999]/60" placeholder="••••••••••••" type="password" required />
                            <button class="absolute right-4 top-1/2 -translate-y-1/2 text-[#4d9999] hover:text-primary transition-colors" type="button">
                                <span class="material-symbols-outlined !text-[20px]">visibility</span>
                            </button>
                        </div>
                    </div>
                    <!-- Action Button -->

                    <span style="color:red">@Html.ValidationSummary()</span>

                    <div class="pt-4">
                        <button class="w-full bg-primary text-white font-bold text-lg h-16 rounded-xl shadow-xl shadow-primary/30 hover:shadow-primary/40 active:scale-[0.98] transition-all flex items-center justify-center gap-2" type="submit">
                            <span>Giriş Yap</span>
                            <span class="material-symbols-outlined">arrow_forward</span>
                        </button>
                    </div>
                    <!-- Footer -->
                    <div class="text-center pt-2">
                        <p class="text-sm text-[#4d9999]">
                            Henüz bir hesabınız yok mu?
                            <a class="text-primary font-bold hover:underline underline-offset-4 ml-1" href="/Register/Signup">Kayıt Ol</a>
                        </p>
                    </div>
                </form>
            </div>
        </main>
        <!-- Background Elements for Visual Interest -->
        <div class="absolute -top-24 -left-24 size-[500px] bg-primary/10 rounded-full blur-[100px] -z-10"></div>
        <div class="absolute top-1/2 -right-48 size-[600px] bg-primary/5 rounded-full blur-[120px] -z-10"></div>
        <!-- Bottom Disclaimer -->
        <footer class="p-8 text-center">
            <p class="text-[#4d9999] text-xs uppercase tracking-widest opacity-60">© 2024 Digital Craft Studio</p>
        </footer>
    </div>
</body>
</html>