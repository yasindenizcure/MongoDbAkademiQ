@model RegisterAdminDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Foodu | Admin Kayıt Paneli</title>

    <link href="~/Foodu v1.7/source/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Foodu v1.7/source/assets/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Foodu v1.7/source/assets/css/animate.min.css" rel="stylesheet">
    <link href="~/Foodu v1.7/source/assets/css/style.css" rel="stylesheet">
    <link href="~/Foodu v1.7/source/style.css" rel="stylesheet">

    <style>
        .login-area {
            padding: 80px 0;
            background: #f8f9fa;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center; /* Yatayda ortalar */
        }

        .login-items {
            background: #fff;
            box-shadow: 0 15px 45px rgba(0,0,0,0.1);
            border-radius: 15px;
            overflow: hidden;
            width: 100%;
            max-width: 600px; /* Kayıt formu biraz daha geniş olabilir */
        }

        .login-forms {
            padding: 50px;
        }

            .login-forms button {
                background: #ff5722;
                color: #fff;
                border: none;
                padding: 15px 30px;
                width: 100%;
                border-radius: 5px;
                font-weight: 700;
                transition: 0.3s;
                margin-top: 15px;
            }

                .login-forms button:hover {
                    background: #e64a19;
                }

        .form-group label {
            font-weight: 600;
            margin-bottom: 5px;
            color: #333;
        }

        .form-control:focus {
            border-color: #ff5722;
            box-shadow: 0 0 0 0.2rem rgba(255, 87, 34, 0.25);
        }
    </style>
</head>

<body>

    <div class="login-area">
        <div class="container d-flex justify-content-center">
            <div class="login-items animate__animated animate__fadeIn">
                <div class="login-forms">
                    <div class="text-center mb-4">
                        <img src="~/Foodu v1.7/source/assets/img/logo.png" alt="Logo" style="max-width: 150px;">
                    </div>
                    <h2 class="mb-2 text-center">Yeni Hesap Oluştur</h2>
                    <p class="mb-4 text-muted text-center">Yönetim paneline erişmek için bilgilerinizi eksiksiz doldurun.</p>

                    <form method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-group">
                                    <label>Adınız</label>
                                    <input asp-for="FirstName" class="form-control" placeholder="Örn: Yasin" required>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-group">
                                    <label>Soyadınız</label>
                                    <input asp-for="LastName" class="form-control" placeholder="Soyadınızı yazın" required>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label>Kullanıcı Adı</label>
                            <input asp-for="UserName" class="form-control" placeholder="Sistemde görünecek adınız" required>
                        </div>

                        <div class="form-group mb-3">
                            <label>Şifre</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Güçlü bir şifre belirleyin" required>
                        </div>

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger py-2 mt-3">
                                <div asp-validation-summary="All" class="small"></div>
                            </div>
                        }

                        <button type="submit">Admin Hesabını Kaydet <i class="fas fa-user-plus ms-2"></i></button>
                    </form>

                    <div class="mt-4 text-center">
                        <p class="small text-muted">Zaten bir hesabınız var mı? <a href="/Login/Index" class="text-danger fw-bold">Giriş Yap</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Foodu v1.7/source/assets/js/jquery-3.6.0.min.js"></script>
    <script src="~/Foodu v1.7/source/assets/js/bootstrap.bundle.min.js"></script>
</body>
</html>